# =============================================================================
# Production .env — salin ke .env di server lalu isi nilai rahasia & sesuaikan
# =============================================================================

# --- Aplikasi ---
APP_NAME="LKD"
APP_ENV=production
APP_KEY=base64:CHANGE_ME
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# --- Logging ---
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# --- Database (nama host = service di docker-compose) ---
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=db_kalibrasi
DB_USERNAME=tafta
DB_PASSWORD=your_strong_password

# --- Session & cache (production pakai database) ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

# --- Memcached (opsional, kosongkan jika tidak dipakai) ---
MEMCACHED_HOST=127.0.0.1

# --- Redis (opsional, kosongkan jika tidak dipakai) ---
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- Mail (sesuaikan untuk production) ---
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# --- AWS / S3 (opsional) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --- Vite (nama app untuk asset) ---
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# Docker — port di host (jangan pakai 80/81 jika NPM aktif; 8080 sering bentrok)
# =============================================================================
APP_PORT=8081
MYSQL_HOST_PORT=3307
